<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:weightSum="1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:padding="2dp"
        app:titleMarginStart="20dp"
        app:titleTextAppearance="@style/AppTheme.Toolbar.Title" />



     <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:layout_marginTop="15dp"
        android:layout_below="@id/notice_title"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/notice_title"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"/>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice Details:"
        android:layout_below="@id/notice_title"/>

    <TextView
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/notice_detail"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:lines="7"
        android:scrollbars="vertical"
        android:maxLines="8"
        />
    <View
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/noticetype"
        />
    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Uploaded By:"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice_upload_by"
        android:hint="teacher"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="On:"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:id="@+id/notice_date_textview"
        android:hint="date"
        />
        </LinearLayout>

